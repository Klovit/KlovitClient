<!DOCTYPE html>
<html lang="en" class="dark" style="--vh: 6.53px;">

<%- include('./components/head') %>

<body x-data="" class="is-header-blur dark x-bind=" $store.global.documentBody">
  <!-- Page Wrapper -->
  <div id="root" class="min-h-100vh flex grow bg-zinc-900">
      <!-- Sidebar -->
      <%- include('./components/sidebar') %>
      <%- include('./components/topnav') %>


<style>
#container {
  display: flex;                  /* establish flex container */
  flex-direction: column;            /* default value; can be omitted */
  flex-wrap: wrap;              /* default value; can be omitted */
  justify-content: space-between;
}
#container > div > {
  width: 300px;
  height: 200px;
}</style>

    <main class="main-content w-full pb-8">
      <% if (req.query.err) { %>
        <div style="border-radius: 15px;" class="alert bg-blue-600">
          <% if (req.query.err == "MISSINGCOUPONCODE") { %>
            <p class="text-white m-2">You have not provided a coupon code.</p>
          <% } else if (req.query.err == "INVALIDCOUPONCODE") { %>
            <p class="text-white m-2">Invalid coupon code. Was it claimed already?</p>
          <% } else if (req.query.err == "SUCCESSCOUPONCODE") { %>
            <p class="text-white m-2">Success!</p>
          <% } else { %>
            <p class="text-white m-2">Coupon failure.</p>
          <% } %>
          </div>
        <% } %>
        <div id="container" class="mt-4 px-[var(--margin-x)] grid grid-cols-1 lg:grid-cols-4 gap-4">
                <div class="rounded-xl bg-zinc-800/40 px-2.5 py-2">
             <h1 style="color: white; font-size: xx-large;">Redeem</h1>
             <p class="text-gray">Gift others your coins.</p>

                <div class="flex flex-col bg-zinc-800 rounded-xl w-full">
                  <div class="flex flex-col bg-zinc-800 rounded-xl w-full card">
                    <div class="flex flex-col bg-zinc-800 rounded-xl w-full card-body">
                      <form class="flex flex-col bg-zinc-800 rounded-xl w-full card-body" action="/coupon_redeem">
                        <label style="color: white; font-size: medium;"  for="code">Code:</label>
   <input style="border-radius: 15px; padding: 8px;" type="text" class="form-control flex flex-col bg-zinc-800 rounded-xl" placeholder="Enter your coupon code here" name="code">
   <br>
   <button class="rounded-xl bg-zinc-900 px-2.5 py-2 btn btn-primary btn-lg">Redeem</button>
</form>
                    </div>
                  </div>
                </div>
              </div>
            <%- include('./components/ads') %>
            </div>

</main>
  </div>
  <div id="x-teleport-target"></div>
  <script>
    window.addEventListener("DOMContentLoaded", () => Alpine.start());
  </script>
       <%- include('./components/footer') %>




        
</body>

</html>
