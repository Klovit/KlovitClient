const icon = await getImage({src: `${LOGO}`,height: '50', width: '50', format: 'png'})


const year = new Date().getFullYear().toString()
const yearWithTitle = `${year} ${TITLE}`
---
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content=`${SITE_DESCRIPTION} | Powered by KlovitClient.`>
        <meta name="keywords" content=`KlovitClient, Hosting, Klovit, Freemium Minecraft Hosting, ${TITLE}, Cloud, Minecraft, Servers, Free Servers, Hostings that use KlovitClient`>
        <meta name="author" content=`Klovit`>
        <meta name="copyright" content=`${TITLE}`>
        <meta property="og:type" content=`website`>
        <meta property="og:title" content=`${TITLE}`>
        <meta property="og:description" content=`${SITE_DESCRIPTION} | Powered by KlovitClient`>
        <meta property="og:image" content=`${LOGO}`>
        <meta name="twitter:card" content=`${LOGO}`>
        <meta name="twitter:title" content=`${TITLE}`>
        <meta name="twitter:description" content=`${SITE_DESCRIPTION} | Powered by KlovitClient`>
        <meta name="twitter:image" content=`${LOGO}`>
